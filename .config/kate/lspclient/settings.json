{
    "servers": {
        "terraform": {
            "command": [
                "terraform-ls",
                "serve"
            ],
            "url": "https://github.com/hashicorp/terraform-ls",
            "highlightingModeRegex": "^Terraform$",
            "rootIndicationFileNames": [
                "*.tf"
            ]
        },
        "rego": {
            "command": [
                "/usr/local/bin/regal",
                "language-server"
            ],
            "url": "https://github.com/StyraInc/regal",
            "highlightingModeRegex": "^Rego$",
            "rootIndicationFileNames": [
                "*.rego"
            ]
        }
    }
}
